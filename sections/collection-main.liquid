{% comment %}
    Collection Section - SPoNGe
    Shop page with aurora aesthetic
{% endcomment %}

<!-- Navigation -->
<nav class="shop-nav">
    <a href="/" class="nav-logo">SPoNGe</a>
    <div class="nav-links">
        <a href="/pages/about">About</a>
        <a href="/pages/launch">Launch</a>
        <a href="/collections/all" class="active">Shop</a>
    </div>
</nav>

<!-- Background Gradient -->
<div class="shop-bg"></div>

<!-- Main Content -->
<main class="shop-main">
    <!-- Header -->
    <header class="collection-header">
        <h1>{{ collection.title | default: 'Shop' }}</h1>
        {% if collection.description != blank %}
            <p class="collection-description">{{ collection.description }}</p>
        {% endif %}
        
        <!-- Filter Bar -->
        <div class="filter-bar">
            <span class="product-count">{{ collection.products.size }} {{ collection.products.size | pluralize: 'piece', 'pieces' }}</span>
            <div class="filter-options">
                <button class="filter-btn active" data-filter="all">All</button>
                {% for tag in collection.all_tags limit: 5 %}
                    <button class="filter-btn" data-filter="{{ tag | handleize }}">{{ tag }}</button>
                {% endfor %}
            </div>
        </div>
    </header>
    
    <!-- Product Grid -->
    <div class="product-grid">
        {% for product in collection.products %}
            <a href="{{ product.url }}" class="product-card" data-tags="{{ product.tags | join: ' ' | handleize }}">
                <div class="product-card-image">
                    {% if product.featured_image %}
                        <img src="{{ product.featured_image | img_url: '600x' }}" 
                             alt="{{ product.title }}"
                             loading="lazy">
                    {% else %}
                        <div class="placeholder-image">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                                <rect x="3" y="3" width="18" height="18" rx="2"/>
                                <circle cx="8.5" cy="8.5" r="1.5"/>
                                <path d="M21 15l-5-5L5 21"/>
                            </svg>
                        </div>
                    {% endif %}
                    <div class="product-overlay">
                        <span class="quick-view">View Details</span>
                    </div>
                </div>
                <div class="product-card-info">
                    <h3>{{ product.title }}</h3>
                    <div class="product-meta">
                        <p class="product-price">{{ product.price | money }}</p>
                        {% if product.compare_at_price > product.price %}
                            <p class="product-compare">{{ product.compare_at_price | money }}</p>
                        {% endif %}
                    </div>
                    {% if product.available == false %}
                        <span class="sold-out-badge">Sold Out</span>
                    {% endif %}
                </div>
            </a>
        {% else %}
            <!-- Empty State -->
            <div class="empty-collection">
                <div class="empty-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                        <circle cx="12" cy="12" r="10"/>
                        <path d="M12 6v6l4 2"/>
                    </svg>
                </div>
                <h3>Coming Soon</h3>
                <p>New pieces are emerging from the dark.</p>
                <a href="/pages/launch" class="notify-btn">Get Notified</a>
            </div>
        {% endfor %}
    </div>
</main>

<style>
    /* ========================================
       SHOP PAGE - SPONGE
       ======================================== */
    
    :root {
        --sponge-black: #0a0a0c;
        --sponge-white: #f5f5f7;
        --sponge-violet: #9b8fd9;
        --sponge-blue: #4a90d9;
        --sponge-yellow: #f5d547;
    }
    
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        background: var(--sponge-black);
        color: var(--sponge-white);
        font-family: 'Georgia', 'Times New Roman', serif;
        min-height: 100vh;
    }
    
    /* ========================================
       NAVIGATION
       ======================================== */
    
    .shop-nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem 4rem;
        background: linear-gradient(to bottom, var(--sponge-black), transparent);
    }
    
    .nav-logo {
        font-family: 'Courier New', monospace;
        font-size: 1.2rem;
        letter-spacing: 0.3em;
        color: var(--sponge-white);
        text-decoration: none;
    }
    
    .nav-links {
        display: flex;
        gap: 3rem;
    }
    
    .nav-links a {
        font-size: 0.9rem;
        letter-spacing: 0.15em;
        color: var(--sponge-white);
        text-decoration: none;
        opacity: 0.7;
        transition: opacity 0.3s ease;
    }
    
    .nav-links a:hover,
    .nav-links a.active {
        opacity: 1;
    }
    
    /* ========================================
       BACKGROUND
       ======================================== */
    
    .shop-bg {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 50vh;
        background: 
            radial-gradient(ellipse 100% 70% at 50% 0%, rgba(155, 143, 217, 0.08) 0%, transparent 50%),
            radial-gradient(ellipse 80% 50% at 30% 10%, rgba(74, 144, 217, 0.05) 0%, transparent 40%),
            var(--sponge-black);
        pointer-events: none;
        z-index: 0;
    }
    
    /* ========================================
       MAIN CONTENT
       ======================================== */
    
    .shop-main {
        position: relative;
        z-index: 10;
        min-height: 100vh;
        padding: 8rem 4rem 4rem;
        max-width: 1600px;
        margin: 0 auto;
    }
    
    /* ========================================
       HEADER
       ======================================== */
    
    .collection-header {
        margin-bottom: 4rem;
    }
    
    .collection-header h1 {
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 400;
        letter-spacing: 0.15em;
        margin-bottom: 1rem;
    }
    
    .collection-description {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.6);
        max-width: 600px;
        line-height: 1.7;
        margin-bottom: 2rem;
    }
    
    /* ========================================
       FILTER BAR
       ======================================== */
    
    .filter-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 0;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .product-count {
        font-family: 'Courier New', monospace;
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
        letter-spacing: 0.1em;
    }
    
    .filter-options {
        display: flex;
        gap: 0.5rem;
    }
    
    .filter-btn {
        padding: 0.6rem 1.2rem;
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: rgba(255, 255, 255, 0.6);
        font-family: 'Courier New', monospace;
        font-size: 0.8rem;
        letter-spacing: 0.1em;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .filter-btn:hover {
        border-color: rgba(255, 255, 255, 0.3);
        color: var(--sponge-white);
    }
    
    .filter-btn.active {
        background: rgba(155, 143, 217, 0.15);
        border-color: var(--sponge-violet);
        color: var(--sponge-white);
    }
    
    /* ========================================
       PRODUCT GRID
       ======================================== */
    
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 3rem 2rem;
        padding-top: 2rem;
    }
    
    /* ========================================
       PRODUCT CARD
       ======================================== */
    
    .product-card {
        text-decoration: none;
        color: inherit;
        display: block;
        transition: transform 0.4s ease;
    }
    
    .product-card:hover {
        transform: translateY(-8px);
    }
    
    .product-card-image {
        position: relative;
        aspect-ratio: 3/4;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.02);
        margin-bottom: 1.5rem;
    }
    
    .product-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease, filter 0.4s ease;
    }
    
    .product-card:hover .product-card-image img {
        transform: scale(1.05);
    }
    
    .placeholder-image {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.02);
    }
    
    .placeholder-image svg {
        width: 48px;
        height: 48px;
        opacity: 0.2;
    }
    
    .product-overlay {
        position: absolute;
        inset: 0;
        background: rgba(10, 10, 12, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.4s ease;
    }
    
    .product-card:hover .product-overlay {
        opacity: 1;
    }
    
    .quick-view {
        padding: 0.8rem 1.5rem;
        border: 1px solid var(--sponge-white);
        font-family: 'Courier New', monospace;
        font-size: 0.8rem;
        letter-spacing: 0.15em;
        transition: all 0.3s ease;
    }
    
    .product-card:hover .quick-view {
        background: var(--sponge-white);
        color: var(--sponge-black);
    }
    
    /* ========================================
       PRODUCT INFO
       ======================================== */
    
    .product-card-info {
        position: relative;
    }
    
    .product-card-info h3 {
        font-size: 1rem;
        font-weight: 400;
        letter-spacing: 0.1em;
        margin-bottom: 0.5rem;
    }
    
    .product-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .product-price {
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.8);
    }
    
    .product-compare {
        font-family: 'Courier New', monospace;
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.4);
        text-decoration: line-through;
    }
    
    .sold-out-badge {
        display: inline-block;
        margin-top: 0.5rem;
        padding: 0.3rem 0.8rem;
        background: rgba(255, 255, 255, 0.05);
        font-family: 'Courier New', monospace;
        font-size: 0.7rem;
        letter-spacing: 0.1em;
        color: rgba(255, 255, 255, 0.5);
    }
    
    /* ========================================
       EMPTY STATE
       ======================================== */
    
    .empty-collection {
        grid-column: 1 / -1;
        text-align: center;
        padding: 6rem 2rem;
    }
    
    .empty-icon {
        margin-bottom: 2rem;
    }
    
    .empty-icon svg {
        width: 64px;
        height: 64px;
        opacity: 0.3;
    }
    
    .empty-collection h3 {
        font-size: 1.8rem;
        font-weight: 400;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
    }
    
    .empty-collection p {
        color: rgba(255, 255, 255, 0.5);
        margin-bottom: 2rem;
    }
    
    .notify-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        background: transparent;
        border: 1px solid var(--sponge-violet);
        color: var(--sponge-white);
        font-family: 'Courier New', monospace;
        font-size: 0.85rem;
        letter-spacing: 0.15em;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .notify-btn:hover {
        background: rgba(155, 143, 217, 0.15);
    }
    
    /* ========================================
       RESPONSIVE
       ======================================== */
    
    @media (max-width: 1024px) {
        .shop-main {
            padding: 7rem 2rem 3rem;
        }
        
        .product-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 2rem 1.5rem;
        }
    }
    
    @media (max-width: 768px) {
        .shop-nav {
            padding: 1.5rem 2rem;
        }
        
        .nav-links {
            gap: 1.5rem;
        }
        
        .filter-bar {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }
        
        .filter-options {
            flex-wrap: wrap;
        }
        
        .product-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem 1rem;
        }
        
        .product-card-image {
            aspect-ratio: 4/5;
        }
    }
    
    @media (max-width: 480px) {
        .product-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>
    // Filter functionality
    document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.addEventListener('click', () => {
            // Update active state
            document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            
            const filter = btn.dataset.filter;
            
            document.querySelectorAll('.product-card').forEach(card => {
                if (filter === 'all') {
                    card.style.display = 'block';
                } else {
                    const tags = card.dataset.tags || '';
                    card.style.display = tags.includes(filter) ? 'block' : 'none';
                }
            });
        });
    });
</script>

{% schema %}
{
    "name": "Collection Main",
    "tag": "section",
    "class": "collection-main-section"
}
{% endschema %}
