{% comment %}
    Collection Section - SPoNGe
    Shop page with aurora aesthetic - Buy Button Style
{% endcomment %}

<!-- Navigation -->
<nav class="shop-nav">
    <a href="/" class="nav-logo">SPoNGe</a>
    <div class="nav-links">
        <a href="/pages/about">About</a>
        <a href="/pages/launch">Launch</a>
        <a href="/collections/all" class="active">Shop</a>
    </div>
</nav>

<!-- Background -->
<div class="shop-bg"></div>

<!-- Main Content -->
<main class="shop-main">
    <header class="collection-header">
        <h1>{{ collection.title | default: 'Shop' }}</h1>
        <p class="collection-description">Pieces crafted at the intersection of art, technology, and fashion.</p>
    </header>
    
    <!-- Product Grid -->
    <div class="product-grid">
        {% for product in collection.products %}
            <div class="product-card">
                <a href="{{ product.url }}" class="product-image-link">
                    {% if product.featured_image %}
                        <img src="{{ product.featured_image | img_url: '600x' }}" 
                             alt="{{ product.title }}"
                             loading="lazy">
                    {% else %}
                        <div class="placeholder-image">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                                <rect x="3" y="3" width="18" height="18" rx="2"/>
                                <circle cx="8.5" cy="8.5" r="1.5"/>
                                <path d="M21 15l-5-5L5 21"/>
                            </svg>
                        </div>
                    {% endif %}
                </a>
                <div class="product-info">
                    <a href="{{ product.url }}" class="product-title">{{ product.title }}</a>
                    <p class="product-price">{{ product.price | money }}</p>
                    {% if product.available %}
                        <form method="post" action="/cart/add">
                            <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                            <button type="submit" class="add-to-cart-btn">ADD TO CART</button>
                        </form>
                    {% else %}
                        <button class="add-to-cart-btn sold-out" disabled>SOLD OUT</button>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <!-- Empty State -->
            <div class="empty-collection">
                <div class="empty-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                        <circle cx="12" cy="12" r="10"/>
                        <path d="M12 6v6l4 2"/>
                    </svg>
                </div>
                <h3>Coming Soon</h3>
                <p>New pieces are emerging from the dark.</p>
                <a href="/pages/launch" class="notify-btn">Get Notified</a>
            </div>
        {% endfor %}
    </div>
</main>

<style>
    :root {
        --sponge-black: #0a0a0c;
        --sponge-white: #f5f5f7;
        --sponge-violet: #9b8fd9;
        --sponge-blue: #4a90d9;
    }
    
    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    body {
        background: var(--sponge-black);
        color: var(--sponge-white);
        font-family: 'Georgia', 'Times New Roman', serif;
        min-height: 100vh;
    }
    
    /* Navigation */
    .shop-nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem 4rem;
        background: linear-gradient(to bottom, var(--sponge-black), transparent);
    }
    
    .nav-logo {
        font-family: 'Courier New', monospace;
        font-size: 1.2rem;
        letter-spacing: 0.3em;
        color: var(--sponge-white);
        text-decoration: none;
    }
    
    .nav-links { display: flex; gap: 3rem; }
    
    .nav-links a {
        font-size: 0.9rem;
        letter-spacing: 0.15em;
        color: var(--sponge-white);
        text-decoration: none;
        opacity: 0.7;
        transition: opacity 0.3s ease;
    }
    
    .nav-links a:hover, .nav-links a.active { opacity: 1; }
    
    /* Background */
    .shop-bg {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 50vh;
        background: 
            radial-gradient(ellipse 100% 70% at 50% 0%, rgba(155, 143, 217, 0.08) 0%, transparent 50%),
            radial-gradient(ellipse 80% 50% at 30% 10%, rgba(74, 144, 217, 0.05) 0%, transparent 40%),
            var(--sponge-black);
        pointer-events: none;
        z-index: 0;
    }
    
    /* Main Content */
    .shop-main {
        position: relative;
        z-index: 10;
        min-height: 100vh;
        padding: 8rem 4rem 4rem;
        max-width: 1400px;
        margin: 0 auto;
    }
    
    /* Header - Centered */
    .collection-header {
        margin-bottom: 4rem;
        text-align: center;
    }
    
    .collection-header h1 {
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 400;
        letter-spacing: 0.15em;
        margin-bottom: 1rem;
    }
    
    .collection-description {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.6);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.7;
    }
    
    /* Product Grid */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 50px 30px;
    }
    
    /* Product Card */
    .product-card {
        text-align: center;
    }
    
    .product-image-link {
        display: block;
        position: relative;
        padding-top: 100%;
        margin-bottom: 1rem;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.02);
    }
    
    .product-image-link img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }
    
    .product-card:hover .product-image-link img {
        transform: scale(1.05);
    }
    
    .placeholder-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.02);
    }
    
    .placeholder-image svg {
        width: 48px;
        height: 48px;
        opacity: 0.2;
    }
    
    /* Product Info */
    .product-info {
        padding: 0.5rem;
    }
    
    .product-title {
        display: block;
        font-family: Georgia, serif;
        font-size: 1rem;
        font-weight: 400;
        color: var(--sponge-white);
        letter-spacing: 0.1em;
        text-decoration: none;
        margin-bottom: 0.5rem;
        transition: color 0.3s ease;
    }
    
    .product-title:hover {
        color: var(--sponge-violet);
    }
    
    .product-price {
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 1rem;
    }
    
    /* Add to Cart Button */
    .add-to-cart-btn {
        font-family: 'Courier New', monospace;
        font-size: 0.8rem;
        letter-spacing: 0.15em;
        padding: 12px 24px;
        background-color: transparent;
        border: 1px solid var(--sponge-white);
        color: var(--sponge-white);
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .add-to-cart-btn:hover {
        background-color: var(--sponge-white);
        color: var(--sponge-black);
    }
    
    .add-to-cart-btn.sold-out {
        opacity: 0.4;
        cursor: not-allowed;
    }
    
    .add-to-cart-btn.sold-out:hover {
        background-color: transparent;
        color: var(--sponge-white);
    }
    
    /* Empty State */
    .empty-collection {
        grid-column: 1 / -1;
        text-align: center;
        padding: 6rem 2rem;
    }
    
    .empty-icon {
        margin-bottom: 2rem;
    }
    
    .empty-icon svg {
        width: 64px;
        height: 64px;
        opacity: 0.3;
    }
    
    .empty-collection h3 {
        font-size: 1.8rem;
        font-weight: 400;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
    }
    
    .empty-collection p {
        color: rgba(255, 255, 255, 0.5);
        margin-bottom: 2rem;
    }
    
    .notify-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        background: transparent;
        border: 1px solid var(--sponge-violet);
        color: var(--sponge-white);
        font-family: 'Courier New', monospace;
        font-size: 0.85rem;
        letter-spacing: 0.15em;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .notify-btn:hover {
        background: rgba(155, 143, 217, 0.15);
    }
    
    /* Responsive */
    @media (max-width: 1024px) {
        .product-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 40px 20px;
        }
    }
    
    @media (max-width: 768px) {
        .shop-nav {
            padding: 1.5rem 2rem;
        }
        
        .nav-links {
            gap: 1.5rem;
        }
        
        .shop-main {
            padding: 7rem 2rem 3rem;
        }
        
        .product-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 30px 15px;
        }
        
        .add-to-cart-btn {
            padding: 10px 18px;
            font-size: 0.7rem;
        }
    }
    
    @media (max-width: 480px) {
        .product-grid {
            grid-template-columns: 1fr;
            gap: 40px;
        }
    }
</style>

{% schema %}
{
    "name": "Collection Main",
    "tag": "section",
    "class": "collection-main-section"
}
{% endschema %}
