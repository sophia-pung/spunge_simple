{% comment %}
    Page Section - SPoNGe
{% endcomment %}

<div class="page-content">
    <div class="page-container">
        <h1>{{ page.title }}</h1>
        <div class="page-body">
            {{ page.content }}
        </div>
    </div>
</div>

<style>
    .page-content {
        min-height: 100vh;
        padding: 6rem 2rem 4rem;
        background: var(--sponge-black);
    }
    
    .page-container {
        max-width: 800px;
        margin: 0 auto;
    }
    
    .page-container h1 {
        font-size: 2.5rem;
        letter-spacing: 0.2em;
        margin-bottom: 2rem;
        text-align: center;
    }
    
    .page-body {
        line-height: 1.8;
    }
    
    .page-body p {
        margin-bottom: 1.5rem;
    }
    
    .page-body h2, .page-body h3 {
        margin: 2rem 0 1rem;
    }
</style>

{% schema %}
{
    "name": "Page Main",
    "tag": "section",
    "class": "page-main-section"
}
{% endschema %}

